<body>
	<%@page import="java.util.Map" %>
	<%@page import="project.a2Main" %>
	<% for (Map.Entry<Integer, String> entry : a2Main.questions.entrySet()) {
		// System.out.println("Key : " + entry.getKey() + " Value : " + entry.getValue());
	%>
		<a>Question: <%= entry.getValue() %></a><br/>
		<% String answer = a2Main.answers.get(entry.getKey()); %>
		<% if (answer.length() > 0) { %>
			<a>Answer:   <%= answer %></a><br/><br/>
		<% } else { %>
			<a href="a2Index.jsp?id=<%= entry.getKey() %>">Click here to answer this question.</a>
		<% } %>
	<%
	} %>
</body>
