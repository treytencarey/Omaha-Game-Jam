<%@ page language="java" contentType="text/html; charset=ISO-8859-1"
    pageEncoding="ISO-8859-1"%>
<!DOCTYPE html>
<html>
<head>
</head>
<body>
	<%@page import="project.a2Main" %>
	<%
	// Check if we're editing a question or not. If we are, the address bar will contain "?id=#"
	Integer questionId = null;
	String question = null;
	if (request.getParameter("id") != null) {
		questionId = Integer.parseInt(request.getParameter("id"));
		question = a2Main.questions.get(questionId);
	} %>
	<a>Enter your question and answer:</a>
	<form action="mainServlet" method="post">
		<% // If we're editing a question rather than adding a new one, display it %>
		<input type="text" name="question" value="<%= (questionId != null) ? question : "" %>"><br/>
		<input type="text" name="answer"><br/>
		<% // If we're editing a question, store it's ID but don't show it to the user %>
		<input type="text" name="id" value="<%= (questionId != null) ? questionId.toString() : "" %>" style="display: none;">
		<button name="submitQuestionButton">Submit</button>
	</form>
</body>
</html>